<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        body {
            background: #f4f7fb;
        }
        .payment-box {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            border: 1px solid #ddd;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<nav class="navbar navbar-dark bg-dark px-4">
    <span class="navbar-brand mb-0 h1">Supermarket App</span>
</nav>

<div class="container mt-5">
    <h2 class="mb-4">Checkout</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.productName %></td>
                    <td><img src="/images/<%= item.image %>" width="60"></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h4 class="mt-3">Grand Total: <strong>$<%= total.toFixed(2) %></strong></h4>

    <!-- PAYMENT FORM -->
    <div class="payment-box">
        <h4>Payment Details</h4>

        <form action="/process-payment" method="POST">

            <!-- CARD NUMBER -->
            <label class="form-label mt-2">Card Number</label>
            <input 
                type="text" 
                name="cardNumber" 
                class="form-control"
                placeholder="1234 5678 9012 3456"
                maxlength="16"
                minlength="16"
                pattern="\d{16}"
                required
                oninput="this.value = this.value.replace(/[^0-9]/g, '')"
            >

            <!-- NAME -->
            <label class="form-label mt-3">Name on Card</label>
            <input type="text" name="cardName" class="form-control" required>

            <!-- EXPIRY -->
            <label class="form-label mt-3">Expiry Date</label>
            <input type="month" name="expiry" class="form-control" required>

            <!-- CVV -->
            <label class="form-label mt-3">CVV</label>
            <input 
                type="password" 
                name="cvv" 
                class="form-control"
                maxlength="3"
                minlength="3"
                pattern="\d{3}"
                required
                oninput="this.value = this.value.replace(/[^0-9]/g, '')"
            >

            <button class="btn btn-success w-100 mt-4">Pay & Place Order</button>

        </form>
    </div>

    <a href="/shopping" class="btn btn-secondary mt-4">Back to Shopping</a>
</div>

</body>
</html>

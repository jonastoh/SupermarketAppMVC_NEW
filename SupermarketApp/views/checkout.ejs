<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-dark bg-dark px-4">
    <span class="navbar-brand mb-0 h1">Supermarket App</span>
</nav>

<div class="container mt-5">
    <h2 class="mb-4">Checkout</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.productName %></td>
                    <td><img src="/images/<%= item.image %>" width="60"></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h4 class="mt-3">Grand Total: <strong>$<%= total.toFixed(2) %></strong></h4>

    <div class="mt-4">
        <a href="/place-order" class="btn btn-primary">Place Order</a>
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
    </div>
</div>

</body>
</html>
